{
  "rules": {
    "boards": {
      "$boardId": {
        "metadata": {
          ".read": "auth != null",
          ".write": "auth != null && (!data.exists() || data.child('ownerId').val() === auth.uid)"
        },
        "objects": {
          ".read": "auth != null",
          "$objectId": {
            ".write": "auth != null"
          }
        },
        "connectors": {
          ".read": "auth != null",
          "$connectorId": {
            ".write": "auth != null"
          }
        }
      }
    },
    "presence": {
      "$boardId": {
        ".read": "auth != null",
        "$userId": {
          ".write": "auth != null && $userId === auth.uid"
        }
      }
    },
    "users": {
      "$userId": {
        ".read": "auth != null",
        ".write": "auth != null && $userId === auth.uid"
      }
    }
  }
}
